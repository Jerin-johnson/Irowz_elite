<style>
/* Product Filter Section - Let Bootstrap handle the layout */
.product_filter {
  padding: 30px;
  max-width: 1400px;
  margin: 0 auto;
}

/* Ensure Bootstrap grid columns work correctly */
.product_filter [class*="col-"] {
  padding-left: 10px;
  padding-right: 10px;
  display: flex; /* Ensure the column is a flex container */
  justify-content: center; /* Center the card within the column */
}

/* Product Card Wrapper */
.product-cart-wrap {
  background: #fff;
  border-radius: 16px;
  overflow: hidden;
  position: relative;
  transition: transform 0.4s ease, box-shadow 0.4s ease;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  margin-bottom: 30px;
  width: 100%; /* Ensure card takes full width of its column */
  max-width: 300px; /* Prevent the card from becoming too narrow */
  display: flex;
  flex-direction: column; /* Internal layout of the card is vertical */
  align-items: center;
}

.product-cart-wrap:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
}

/* Product Image Wrapper */
.product-img-action-wrap {
  position: relative;
  overflow: hidden;
  background: #f1f1f1;
  width: 100%;
}

.product-img {
  width: 100%;
  height: 0;
  padding-bottom: 100%; /* Maintain a 1:1 aspect ratio */
  position: relative;
  overflow: hidden;
}

.product-img-zoom {
  transition: transform 0.5s ease;
}

.product-img-zoom:hover img.default-img {
  transform: scale(1.05);
  opacity: 0.9;
}

img.default-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease, opacity 0.5s ease;
}

/* Product Action Button (Wishlist) */
.product-action-1 {
  position: absolute;
  top: 15px;
  right: 15px;
  z-index: 10;
  opacity: 0;
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.product-cart-wrap:hover .product-action-1 {
  opacity: 1;
  transform: translateY(0);
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  color: #1a1a1a;
  font-size: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn.hover-up:hover {
  background: linear-gradient(45deg, #ff6b6b, #ff8e53);
  color: #fff;
  border-color: transparent;
  transform: scale(1.1);
}

.action-btn i.fi-rs-heart {
  font-size: 18px;
}

/* Product Content */
.product-content-wrap {
  padding: 20px;
  text-align: center;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  border-top: 1px solid #e9ecef;
  width: 100%;
}

.product-content-wrap h6 {
  font-family: 'Poppins', sans-serif;
  font-size: 16px;
  font-weight: 600;
  color: #1a1a1a;
  margin: 0 0 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-content-wrap h5 {
  font-family: 'Poppins', sans-serif;
  font-size: 20px;
  font-weight: 700;
  color: #e63946;
  margin: 0 0 12px;
  letter-spacing: 0.5px;
}

.product-content-wrap a {
  display: inline-block;
  padding: 10px 20px;
  background: linear-gradient(90deg, #2b2d42 0%, #4a4e69 100%);
  color: #fff;
  border-radius: 50px;
  text-decoration: none;
  font-family: 'Poppins', sans-serif;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: background 0.3s ease, transform 0.3s ease;
}

.product-content-wrap a:hover {
  background: linear-gradient(90deg, #4a4e69 0%, #2b2d42 100%);
  transform: translateY(-2px);
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .product_filter [class*="col-"] {
    padding-left: 7.5px;
    padding-right: 7.5px;
  }

  .product-cart-wrap {
    max-width: 220px;
  }

  .product-content-wrap h6 {
    font-size: 14px;
  }

  .product-content-wrap h5 {
    font-size: 18px;
  }

  .product-content-wrap a {
    padding: 8px 16px;
    font-size: 13px;
  }
}

@media (max-width: 576px) {
  .product_filter [class*="col-"] {
    padding-left: 5px;
    padding-right: 5px;
  }

  .product-cart-wrap {
    max-width: 180px;
  }

  .product-content-wrap {
    padding: 15px;
  }

  .product-content-wrap h6 {
    font-size: 13px;
  }

  .product-content-wrap h5 {
    font-size: 16px;
  }

  .product-content-wrap a {
    padding: 6px 12px;
    font-size: 12px;
  }
}

